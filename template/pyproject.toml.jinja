# https://packaging.python.org/en/latest/guides/writing-pyproject-toml/
[project]
name = "{{project_name}}"
version = "0.1.0"
description = ""
authors = [
  {name = "{{author_name}}", email = "{{author_email}}"}
]
readme = "README.md"
requires-python = ">={{python_version}}"
dependencies = []

[dependency-groups]
test = [
    "coverage>=7.6.7",
    "pytest>=8.3.3",
]

[tool.ruff]
target-version = "py{{python_version_nodot}}"
line-length = 90
indent-width = 4

[tool.ruff.lint]
# pycodestyle (`E`), isort (`I`), Pyflakes (`F`), pycodestyle warnings (`W`)
select = ["E", "I", "F", "W"]
ignore = []

[tool.coverage.run]
source = [
  "./{{project_name}}/",
]
omit = [
  "*/tests/*"
]

[tool.coverage.report]
omit = [
  "*/tests/*"
]
exclude_lines = [
    "pragma: no cover",
    "def __repr__",
    "def __str__",
    "if settings.debug",
]
