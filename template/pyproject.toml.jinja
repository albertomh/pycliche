# https://packaging.python.org/en/latest/guides/writing-pyproject-toml/
[project]
name = "{{project_name}}"
version = "{{initial_version}}"
description = ""
authors = [
  {name = "{{author_name}}", email = "{{author_email}}"}
]
readme = "README.md"
requires-python = ">={{python_version}}"
dependencies = [
    "ipython>=8.30.0,<9.0.0"
]

[dependency-groups]
test = [
    "coverage>=7.6.7",
    "pytest>=8.3.3",
]

[tool.ruff]
exclude = [".pdbrc"]
indent-width = 4
line-length = 90
target-version = "py{{python_version.replace('.', '')}}"

[tool.ruff.lint]
# (`B`) flake8-bugbear
# (`E`) pycodestyle
# (`I`) isort
# (`INP`) flake8-no-pep420
# (`F`) Pyflakes
# (`S`) flake8-bandit
# (`W`) pycodestyle warnings
ignore = []
select = ["B", "E", "I", "F", "S", "W"]

[tool.ruff.lint.per-file-ignores]
"tests/**.py" = ["S"]

[tool.coverage.run]
source = [
  "./{{project_name}}/",
]
omit = [
  "*/tests/*"
]

[tool.pytest.ini_options]
addopts = [
    "--pdbcls=IPython.terminal.debugger:TerminalPdb",
]

[tool.coverage.report]
omit = [
  "*/tests/*"
]
exclude_lines = [
    "pragma: no cover",
    "def __repr__",
    "def __str__",
    "if settings.debug",
]
